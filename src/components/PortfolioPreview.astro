---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"project">;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/project/${id}`}>
  <img
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
  <div class="overlay">
    <p class="title">{data.projectType}</p>
    <p class="description">{data.description}</p>
  </div>
</a>

<style>
  .card {
    position: relative;
    display: block;
    height: 11rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: box-shadow var(--theme-transition);
  }

  .card:hover {
    box-shadow: var(--shadow-md);
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2); /* Oscurecer imagen */
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1rem;
    color: white;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
  }

  .title {
    font-size: 1.2rem;
    font-weight: bold;
    border-radius: 0.375rem;
  }

  .description {
    font-size: 0.9rem;
    margin-top: 0.5rem;
    display: none; /* Ocultar por defecto */
  }

  /* Mostrar la descripción en tablets y pantallas grandes */
  @media (min-width: 50em) {
    .card {
      height: 22rem;
      border-radius: 1.5rem;
    }

    .overlay {
      padding: 2rem;
    }

    .description {
      display: block; /* Se muestra solo en tablets y más grandes */
    }
  }
</style>
